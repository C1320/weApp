/* pages/person/person.wxss */
.person-main{

}
.person-info,.login-user{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.login-user,.person-name,.person-sex,.person-age,.person-org{
  border-bottom: 1px solid silver;
}
.person-info .avatar{
  display: flex;
  width:200rpx;
  height:200rpx;
  border-radius: 50%;
}
.person-info .avatar,.self-info{
  margin-top: 10rpx;
}
.person-info,.login-user{
  background-color: rgb(0,184,183);
}
.person-info .self-info{
  width: 60%;
  height: 200rpx;
  border-radius: 10px;
  overflow: hidden;
  color: #303133;
  transition: .3s;
  box-shadow: 0px 0px 10px #857e7e;/*阴影效果*/
}
.self-info label{
  color: #fff;
}
.person-content{
  width: 100%;
}
.login-user .user-name{
  width:200rpx;
  text-align: center;
}
.login-user .empty{
  width: 60%;
  display: flex;
  justify-content: center;
}
.login-user .empty .editData{
  color: #E6A23C;
}

.person-function{
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  justify-content: center;

}
.function-card{
  width: 93%;
  min-height: 300rpx;
  border-radius: 10px;
  border: 1px solid #ebeef5;
  overflow: hidden;
  color: #303133;
  transition: .3s;
  box-shadow: 0px 0px 10px #9521de;/*阴影效果*/
}
.function-1{
  margin-top: 25rpx;
}
.function-1,.function-2,.function-3{
  display: flex;
  justify-content: space-around;
  margin-bottom: 25rpx;
}
.physical{
  display:flex;
  justify-content: space-around;
  flex-flow: column;
}
.physical label{
  font-size: 0.9rem;
}
.physical-img{
height: 50rpx;
width: 50rpx;
border-radius: 50%;
border: 1px solid silver;
margin-bottom: 10rpx;
}
.more{
  margin-top: 20rpx;
  text-align: center;
  color: #67C23A;

}