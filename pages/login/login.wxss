#login-main{
  width:100%;
  height:1300rpx;
  background-color: rgb(245,245,245);
}
.avatar-view{
  width: 100%;
  display: flex;
  justify-content: center;
}
.avatar-view .avatar{
  margin-top: 100rpx;
  display: flex;
  width:200rpx;
  height:200rpx;
  border-radius: 50%;
}
.nick{
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}
.nick .nickname{
  text-align: center;
  font-size: 36rpx;
  font-weight: 300;
}
#user-account{
  width:100%;
  height:100rpx;
  background-color: white;
  position: relative;
  top:100rpx;
  border-radius: 50rpx;
}
#user-password{
  width:100%;
  height:100rpx;
  background-color: white;
  position: relative;
  top:130rpx;
  border-radius: 50rpx;
}
#user-account .user-icon{
position: relative;
left:40rpx;
top:30rpx;
color: rgb(143, 143, 143);
}
#login-name{
  text-align: center;
  width:400rpx;
  margin-left: 200rpx;
  position: relative;
  bottom: 10rpx;
}
#user-password .user-icon{
position: relative;
left:40rpx;
top:30rpx;
color: rgb(143, 143, 143);
}
#login-password{
  text-align: center;
  width:400rpx;
  margin-left: 200rpx;
  position: relative;
  bottom: 10rpx;
}
#pass2{
  width:400rpx;
  height:80rpx;
  margin-left: 320rpx;
  position: relative;
  bottom: 25rpx;
}
.other-btn{
  margin-top: 150rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.other-btn #register-btn,#forget-btn{
  height: 80rpx;
}
.other-btn #register-btn::after{
    border: none;
  }
  .other-btn #forget-btn::after{
    border: none;

  }
  .other-btn #register-btn text{
    color: blueviolet;
  }
  .other-btn #forget-btn{
    color: blueviolet;
  }
#login-btn{
  position: relative;
  top:50rpx;
  background-color:rgb(51, 204, 170);
  width:600rpx;
  border-radius: 50rpx;
}
#login-btn text{
  color:white;
  font-size: 39rpx;
}



