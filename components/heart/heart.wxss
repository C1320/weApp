/* components/heart/heart.wxss */
@import "../../styles/fonticon.wxss";
.body{
  width: 100%;
  height: 100%;
  padding: 10rpx;
  color: rgb(248, 244, 244);
}
.center{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 140rpx;
  height: 140rpx;
  font-weight: 0 !important;
}
.Heart_rate{
  position: absolute;
  top: 10rpx;
  left: 20rpx;
  font-size: 25rpx;
  font-weight: 600;
}

.artery{
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  font-weight: 600;
  font-size: 25rpx;
}

.Diastolic_blood{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-weight: 600;
  font-size: 25rpx;
}

.Systolic_blood{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-weight: 600;
  font-size: 25rpx;
}